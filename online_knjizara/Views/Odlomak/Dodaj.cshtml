@model OdlomakUrediVM;


@{
    if (Model.ID == 0)
    {
        ViewData["Title"] = "Dodavanje odlomka";
    }
    else
    {
        ViewData["Title"] = "Izmjena odlomka";
    }
}
<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>

<h3>@ViewData["Title"]</h3>

<form asp-action="Snimi" method="post">
    @Html.HiddenFor(s => s.ID)

    <div class="form-group">
        <label>Naziv odlomka</label>
        <input asp-for="NazivOdlomka" class="form-control"/>
        <span asp-validation-for="NazivOdlomka" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Sadrzaj odlomka</label>
        <textarea asp-for="Sadrzaj" class="form-control"></textarea>
        <span asp-validation-for="Sadrzaj" class="text-danger"></span>
    </div>


    <input type="submit" value="Snimi" class="btn btn-primary" />
</form>



