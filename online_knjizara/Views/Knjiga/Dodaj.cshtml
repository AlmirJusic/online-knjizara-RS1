@model KnjigaUrediVM;


@{
    if (Model.ID == 0)
    {
        ViewData["Title"] = "Dodavanje knjige";
    }
    else
    {
        ViewData["Title"] = "Izmjena knjige";

    }
}
<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>

<h3>@ViewData["Title"]</h3>

<form enctype="multipart/form-data" asp-action="Snimi" method="post">
    @Html.HiddenFor(s => s.ID)

    <div class="form-group">
        <label>Naziv</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Autor</label>
        <select asp-for="Autor_ID" asp-items="Model.Autor" class="form-control">Odaberi</select>
        <span asp-validation-for="Autor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Izdavac</label>
        <select asp-for="Izdavac_ID" asp-items="Model.Izdavac" class="form-control">Odaberi</select>
        <span asp-validation-for="Izdavac" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Datum izdavanja</label>
        <input type="date" asp-for="DatumIzdavanja" class="form-control" />
        <span asp-validation-for="DatumIzdavanja" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Stanje</label>
        <select asp-for="Stanje_ID" asp-items="Model.Stanje" class="form-control">Odaberi</select>
        <span asp-validation-for="Stanje" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Cijena</label>
        <input type="text" asp-for="Cijena" placeholder="1.0"   class="form-control" />
        <span asp-validation-for="Cijena" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Zanr</label>
        <select asp-for="Zanr_ID" asp-items="Model.Zanr" class="form-control">Odaberi</select>
        <span asp-validation-for="Zanr" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Skladiste</label>
        <select asp-for="Skladiste_ID" asp-items="Model.Skladiste" class="form-control">Odaberi</select>
        <span asp-validation-for="Skladiste" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Odlomak</label>
        <select asp-for="Odlomak_ID" asp-items="Model.Odlomak" class="form-control">Odaberi</select>
        <span asp-validation-for="Odlomak" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Slika </label>
        <input asp-for="Slika" type="file" accept="image/*" class="form-control" />

        <br />
    </div>
    


    <input type="submit" value="Snimi" class="btn btn-primary" />
</form>



