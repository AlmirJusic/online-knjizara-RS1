@model ZaposlenikUrediVM;


@{
    if (Model.ID == 0)
    {
        ViewData["Title"] = "Dodavanje zaposlenika";
    }
    else
    {
        ViewData["Title"] = "Izmjena zaposlenika";
    }
}
<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>

<h3>@ViewData["Title"]</h3>

<form asp-action="Snimi" method="post">
    @Html.HiddenFor(s => s.ID)

    <div class="form-group">
        <label>Korisnik</label>
        <select asp-for="Korisnik_ID" asp-items="Model.korisnici" class="form-control">Odaberi</select>
        <span asp-validation-for="korisnici" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Strucna sprema</label>
        <input asp-for="StrucnaSprema" class="form-control" />
        <span asp-validation-for="StrucnaSprema" class="text-danger"></span>
    </div>
    



    <input type="submit" value="Snimi" class="btn btn-primary" />
</form>


