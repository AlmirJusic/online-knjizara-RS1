@using online_knjizara.Models;
@model online_knjizara.ViewModels.ObavijestiUrediVM;
@{
    ViewData["Title"] = "Dodaj";
}




<form enctype="multipart/form-data" asp-action="Snimi" method="post">
    @Html.HiddenFor(s => s.ID)
    <div class="form-group">
        <label>Naziv obavijesti</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
        <br />
    </div>

    <div class="form-group">
        <label>Sadrzaj</label>
        <input asp-for="Sadrzaj" class="form-control" />
        <span asp-validation-for="Sadrzaj" class="text-danger"></span>

        <br />
    </div>
    


    <div class="form-group">
        <label>Slika </label>
        <input asp-for="Slika" type="file" accept="image/*"  />

        <br />
    </div>





    <input type="submit" value="Snimi" class="btn btn-primary" />
</form>

