@model KorisnikUrediVM;


@{
    if (Model.ID == 0)
    {
        ViewData["Title"] = "Dodavanje korisnika";
    }
    else
    {
        ViewData["Title"] = "Izmjena korisnika";

    }
}
<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>

<h3>@ViewData["Title"]</h3>

<form asp-action="Snimi" method="post">
    @Html.HiddenFor(s => s.ID)

    <div class="form-group">
        <label>Ime</label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Prezime</label>
        <input asp-for="Prezime" class="form-control" />
        <span asp-validation-for="Prezime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Datum rodjenja</label>
        <input asp-for="DatumRodjenja" class="form-control" type="date" />
        <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Adresa</label>
        <input asp-for="Adresa" class="form-control" />
        <span asp-validation-for="Adresa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        @if (Model.ID != 0)
        {
            <input readonly asp-for="Email" class="form-control" />
        }
        else
        {
            <input asp-for="Email" class="form-control" />
        }
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label>Grad</label>
        <select asp-for="Grad_ID" asp-items="Model.Grad" class="form-control">Odaberi</select>
        <span asp-validation-for="Grad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Korisnicko ime</label>
        @if (Model.ID != 0)
        {
            <input readonly asp-for="KorisnickoIme" class="form-control" />
        }
        else
        {
            <input asp-for="KorisnickoIme" class="form-control" />
        }
        
        <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
    </div>




    <input type="submit" value="Snimi" class="btn btn-primary" />
</form>


