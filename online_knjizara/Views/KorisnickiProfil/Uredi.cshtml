@model online_knjizara.ViewModels.KorisnickiProfilUrediVM

@{ ViewData["Title"] = "Uredi";

   @if (!Model.JelZaposlenik)
   {
       Layout = "_LayoutUser";
   }
}



<form action="/KorisnickiProfil/Snimi" method="post">
    @Html.HiddenFor(s => s.ProfilId)


    <h4>Pristupni podaci:</h4>


    <div class="form-group">
        <label>Korisničko ime:</label>

        <input asp-for="KorisnickoIme" class="form-control" type="text" />
        <span asp-validation-for="KorisnickoIme" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label>Lozinka:</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>

    <h4>Kontakt podaci:</h4>


    <div class="form-group">
        <label>Telefon:</label>
        <input asp-for="Telefon" class="form-control" type="text" />
        <span asp-validation-for="Telefon" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" type="text" />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>

    <br />

    <h4>Grad: </h4>
    <div class="form-group">
        <label>Grad:</label>
        <select asp-for="Grad_ID" asp-items="@Model.Grad" class="form-control"></select>
        <span asp-validation-for="Grad_ID" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label>Adresa:</label>
        <input asp-for="Adresa" class="form-control" type="text" />
        <span asp-validation-for="Adresa" class="text-danger"></span>

    </div>

    <input type="submit" value="Snimi" class="btn btn-info" />
</form>




